<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#eca86f"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.khaadi.UpdateDress"
    android:weightSum="1">

    <TextView
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:paddingLeft="5dp"

        android:text="Dress Code"
        android:textColor="@color/mycolor"


        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/editId"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@drawable/pressbutton"
        android:hint="Dress Code"
        android:padding="2sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/mycolor" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="24dp"

        android:text="Category"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:textColor="@color/mycolor"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
            />

    <Spinner
        android:id="@+id/editCategory"
        style="@style/mys"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/pressbutton"
        android:entries="@array/Category"
        android:padding="2sp"
        android:prompt="@string/category_prompt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="24dp"

        android:textStyle="bold"
        android:text="Dress Type"
        android:paddingLeft="5dp"
        android:textColor="@color/mycolor"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="2sp"
        android:id="@+id/editDressType"
        style="@style/mys"
        android:prompt="@string/menDT_prompt"
        android:entries="@array/all_dressType"
        android:background="@drawable/pressbutton"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:textStyle="bold"

        android:text="Quantity"
        android:paddingLeft="5dp"
        android:textColor="@color/mycolor"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
       />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="2sp"
        android:id="@+id/editQuantity"
        android:textColor="@color/mycolor"
        android:textStyle="bold"
        android:hint="Quantity"
        android:background="@drawable/pressbutton"
        android:layout_marginTop="15dp"

        android:layout_marginLeft="20dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:text="Update Dress"
        android:id="@+id/editDress"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_state"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_weight="0.05" />


</LinearLayout>

