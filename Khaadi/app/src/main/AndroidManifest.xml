<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.khaadi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/khaadi"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mandashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        >
        <activity
            android:name=".womandashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".kidsdashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addManDresses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addWomanDress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addKidsDresses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".showManDresses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".showWomanDresses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".showKidsDresses"
            android:theme="@style/AppTheme.NoActionBar" ></activity>
    </application>

</manifest>